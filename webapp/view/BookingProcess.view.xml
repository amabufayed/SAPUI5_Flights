<mvc:View 
	controllerName="SAPUI_Flights.controller.BookingProcess"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
	xmlns:form="sap.ui.layout.form" >
	<NavContainer id="wizardNavContainer">
		<pages>
			<Page
                id="wizardContentPage"
				showNavButton="true"
				navButtonPress='.backToHomePage'
                title="Buy plane ticket">
				<content>
					<Wizard id="ShoppingCartWizard"
						complete='checkCompleted'
						enableBranching="true"
						class="sapUiResponsivePadding--header sapUiResponsivePadding--content">
						<WizardStep
							id="ContentsStep"
							nextStep="paymentSelectionStep"
							title="Ticket: {bookingModel>/bookingForSeatClass} for flight From {flights>/Cityfrom} to {flights>/Cityto}"
							icon="sap-icon://cart">
							<ObjectHeader
								title="Ticket price"
								number="{flightInfo>/Price}"
								numberUnit="{flightInfo>/Currency}">
								<attributes>
									<ObjectAttribute text="This is the list of items in your shopping cart" />
									<ObjectAttribute text="This is the list of items in your shopping cart" />
								</attributes>
							</ObjectHeader>
							<l:BlockLayout>
								<l:BlockLayoutRow>
									<l:BlockLayoutCell
										backgroundColorSet="ColorSet10"
										backgroundColorShade="ShadeD">
										<l:VerticalLayout>
											<Title
												text="Departure information"
												level="H3"
												titleStyle="H2"
												class="sapUiTinyMarginTopBottom"/>
											<Text
												text="Departure:"
												class="sapUiTinyMarginBottom"/>
											<Text
												text="From: {flights>/Cityfrom} at {path: 'flights>/Deptime/ms', formatter: '.formatter.formatTime'}"
												class="sapUiTinyMarginBottom"/>
											<Text
												text="To: {flights>/Cityto} at {path: 'flights>/Arrtime/ms', formatter: '.formatter.formatTime'}"
												class="sapUiTinyMarginBottom"/>
											<Text
												text="Flight time: {flights>/Fltime}"
												class="sapUiTinyMarginBottom"/>
										</l:VerticalLayout>
									</l:BlockLayoutCell>
									<l:BlockLayoutCell
										backgroundColorSet="ColorSet11"
										backgroundColorShade="ShadeD">
										<l:VerticalLayout>
											<Title
												text="Flight details"
												level="H3"
												titleStyle="H2"
												class="sapUiTinyMarginTopBottom"/>
											<Text
												text="Flight date: {flightInfo>/Fldate}"
												class="sapUiTinyMarginBottom"/>
											<Text
												text="Carrier: {flightInfo>/Carrid}"
												class="sapUiTinyMarginBottom"/> 
											<Text
												text="Carrier: {flightInfo>/Planetype}"
												class="sapUiTinyMarginBottom"/>
										</l:VerticalLayout>
									</l:BlockLayoutCell>				
								</l:BlockLayoutRow>
							</l:BlockLayout>
						</WizardStep>
						<WizardStep
							id="paymentSelectionStep"
							title="Select payment type"
							nextStep="passengerInfoStep"
							icon="sap-icon://cart"
							validated="{paymentModel>/validated}">
							<ObjectHeader
								title="Type of payment"
								number="{flightInfo>/Price}"
								numberUnit="{flightInfo>/Currency}">
								<attributes>
									<ObjectAttribute text="Select type of payment from the bottom" />
								</attributes>
							</ObjectHeader>
							<HBox
								renderType="Bare"
								alignItems="Center"
								justifyContent="Center"
								width="100%">
								<SegmentedButton
									select='setPaymentMethod'
									id="paymentMethodSelection"
									selectedKey="{/SelectedPayment}"
									selectedButton='null'
									>
									<items>
										<SegmentedButtonItem
											id="payViaCC"
											key="creditCard"
											text="Credit"/>
										<SegmentedButtonItem
											id="payViaBank"
											key="bankTransfer"
											text="Bank transfer"/>
									</items>
								</SegmentedButton>
							</HBox>
						</WizardStep>
						<WizardStep
							id="passengerInfoStep"
							title="Passenger information"
							nextStep="reviewStep"
							icon="sap-icon://cart"
							validated="{paymentModel>/validated}">
							<form:SimpleForm
								editable="true"
								layout="ResponsiveGridLayout">
								<Label
									labelFor="passengerName"
									text="Passenger name"
									required="true">
									<layoutData>
										<l:GridData span="XL4 L4 M4 S12"/>
									</layoutData>
								</Label>
								<Input
									id="passengerName"
									placeholder="Passenger name"
									value="{
											path: 'userData>/PassengerName',
											type: 'sap.ui.model.type.String',
											constraints: {
												minLength: 2,
												search: '^[a-zA-Z]+[\\s]?[a-zA-Z]+$'
											}
										}"
									change='validateField'>
									<layoutData>
										<l:GridData span="XL8 L8 M8 S12"/>
									</layoutData>
								</Input>
								<Label
									labelFor="passengerSurname"
									text="Passenger surname"
									required="true">
									<layoutData>
										<l:GridData span="XL4 L4 M4 S12"/>
									</layoutData>
								</Label>
								<Input
									id="passengerSurname"
									placeholder="Passenger surname"
									value="{
											path: 'userData>/PassengerSurname',
											type: 'sap.ui.model.type.String',
											constraints: {
												minLength: 2,
												search: '^[a-zA-Z]+[\\s]?[a-zA-Z]+$'
											}
										}"
									change='validateField'>
									<layoutData>
										<l:GridData span="XL8 L8 M8 S12"/>
									</layoutData>
								</Input>
								<Label text="Date of birth"
									labelFor="dateOfBirth">
									<layoutData>
										<l:GridData span="XL4 L4 M4 S12"/>
									</layoutData>
								</Label>
								<DatePicker
									id="dateOfBirth"
									value="{
										path: 'userData>/DateOfBirth',
										type: 'sap.ui.model.type.String',
										constraints: {
											minLength: 5,
											maxLength: 25
										}
									}"
									required="true"
									change='validateField'>
									<layoutData>
										<l:GridData span="XL8 L8 M8 S12"/>
									</layoutData>
								</DatePicker>
								<Label
									labelFor="documentNumber"
									text="Document number"
									required="true">
									<layoutData>
										<l:GridData span="XL4 L4 M4 S12"/>
									</layoutData>
								</Label>
								<Input
									id="documentNumber"
									placeholder="document number"
									value="{
											path: 'userData>/DocumentNumber',
											type: 'sap.ui.model.type.String',
											constraints: {
												minLength: 10,
												maxLength: 40,
												search: '^[a-zA-Z0-9]+$'
											}
										}"
									change='validateField'>
									<layoutData>
										<l:GridData span="XL8 L8 M8 S12"/>
									</layoutData>
								</Input>
							</form:SimpleForm>

						</WizardStep>
						<WizardStep
							id="reviewStep"
							title="Review of your order"
							icon="sap-icon://cart">
							<Text text="Overview of yoru ticket info and billing" />
							<Text text="Overview of yoru ticket info and billing" />
							<Text text="Overview of yoru ticket info and billing" />
							<Text text="Overview of yoru ticket info and billing" />
						</WizardStep>
					</Wizard>
				</content>
				<footer>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button text="Cancel" press='.handleWizardCancel' />
					</OverflowToolbar>
				</footer>
			</Page>
			<Page id="summaryPage"
				title="Summary page">

				<footer>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button text="Confirm" press='.confirmOrder' />
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</NavContainer>
</mvc:View>