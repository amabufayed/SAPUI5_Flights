<mvc:View 
	controllerName="SAPUI_Flights.controller.FlightDetail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	
	<Page title="Flight details">
		<VBox>
		<Label text="Manndt" />
			<Text text="{Mandt}" />

			<Label text="Carrier ID" />
			<Text text="{Carrid}" />

			<Label text="Connection ID" />
			<Text text="{Connid}" />

			<Label text="Flight date" />
			<Text text="{Fldate}" />

			<Label text="Price" />
			<Text text="{Price}" />

			<Label text="Currency" />
			<Text text="{Currency}" />

			<Label text="Plane type" />
			<Text text="{Planetype}" />

			<Label text="Maximum seats" />
			<Text text="{Seatsmax}" />
		</VBox>
			
	
	</Page>

</mvc:View>

							 