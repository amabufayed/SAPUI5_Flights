<mvc:View 
	controllerName="SAPUI_Flights.controller.FlightDetail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout"
	xmlns:f="sap.f">
		<f:DynamicPage>
			<!-- DynamicPage Title -->
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<Title text="Selected flight: {Connid}"/>
					</f:heading>			
				</f:DynamicPageTitle>
			</f:title>
			<!-- DynamicPage Header -->
			<f:header>
				<f:DynamicPageHeader pinnable="true">
					<layout:HorizontalLayout allowWrapping="true">
						<layout:VerticalLayout class="sapUiMediumMarginEnd">
							<ObjectAttribute title="Mandt" text="{Mandt}"/>
							<ObjectAttribute title="Carrier ID" text="{Carrid}"/>
							<ObjectAttribute title="Connection ID" text="{Connid}"/>
						</layout:VerticalLayout>

						<layout:VerticalLayout>
							<ObjectAttribute title="Maximum seats"/>
							<ObjectStatus 
								text="{Seatsmax}" 
								state="Success" />
						</layout:VerticalLayout>
					</layout:HorizontalLayout>
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
				<VBox>
					<Label text="Manndt" />
					<Text text="{Mandt}" />

					<Label text="Carrier ID" />
					<Text text="{Carrid}" />

					<Label text="Connection ID" />
					<Text text="{Connid}" />

					<Label text="Flight date" />
					<Text text="{Fldate}" />

					<Label text="Price" />
					<Text text="{Price}" />

					<Label text="Currency" />
					<Text text="{Currency}" />

					<Label text="Plane type" />
					<Text text="{Planetype}" />

					<Label text="Maximum seats" />
					<Text text="{Seatsmax}" />
				</VBox>
		</f:content>
		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<Button icon="sap-icon://message-popup"
						text="Footer button"
						type="Emphasized"
						press="onMessageButtonPress"
						visible="{= !!${/messagesLength}}"/>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>